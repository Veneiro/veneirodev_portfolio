---
import { Section } from 'astro-boilerplate-components';

import Base from '@/templates/Base.astro';
---

<Base
  head={{
    title: 'Mi Currículum Vitae',
    description: 'Currículum completo de Mateo Rico Iglesias',
  }}
>
  <Section>
    <div class='mx-auto max-w-4xl rounded-lg bg-gray-900 p-6 shadow-lg'>
      <h1 class='mb-4 text-center text-3xl font-bold text-white'>Currículum Vitae</h1>

      <!-- Información Personal -->
      <section class='mb-8'>
        <h2 class='text-2xl font-bold text-gray-300'>Información Personal</h2>
        <p class='text-gray-400'>Mateo Rico Iglesias</p>
        <p class='text-gray-400'>Ingeniero en Informática</p>
        <p class='text-gray-400'>mateorico@example.com</p>
      </section>

      <!-- Educación -->
      <section class='mb-8'>
        <h2 class='text-2xl font-bold text-gray-300'>Educación</h2>
        <div class='border-l-2 border-blue-500 pl-4'>
          <p class='font-semibold text-gray-400'>
            Grado en Ingeniería Informática del Software
          </p>
          <p class='text-sm text-gray-500'>
            Universidad de [Tu Universidad], 2020 - Actualidad
          </p>
        </div>
        <div class='mt-4 border-l-2 border-blue-500 pl-4'>
          <p class='font-semibold text-gray-400'>
            Grado Profesional en Educación Musical
          </p>
          <p class='text-sm text-gray-500'>
            Conservatorio [Tu Conservatorio], 2015 - 2020
          </p>
        </div>
      </section>

      <!-- Experiencia Laboral -->
      <section class='mb-8'>
        <h2 class='text-2xl font-bold text-gray-300'>Experiencia Laboral</h2>
        <div class='border-l-2 border-blue-500 pl-4'>
          <p class='font-semibold text-gray-400'>Nombre del Puesto</p>
          <p class='text-gray-500'>Empresa X, 2022 - Actualidad</p>
          <p class='mt-2 text-gray-300'>
            Descripción de responsabilidades y logros en este puesto.
          </p>
        </div>
      </section>

      <!-- Habilidades -->
      <section class='mb-8'>
        <h2 class='text-2xl font-bold text-gray-300'>Habilidades</h2>
        <ul class='list-inside list-disc text-gray-300'>
          <li>Desarrollo web full-stack</li>
          <li>JavaScript, Python, C++</li>
          <li>Diseño de interfaces de usuario</li>
        </ul>
      </section>

      <!-- Proyectos -->
      <section>
        <h2 class='text-2xl font-bold text-gray-300'>Proyectos</h2>
        <div class='border-l-2 border-blue-500 pl-4'>
          <p class='font-semibold text-gray-400'>Proyecto 1</p>
          <p class='text-sm text-gray-500'>Breve descripción del proyecto</p>
        </div>
        <div class='mt-4 border-l-2 border-blue-500 pl-4'>
          <p class='font-semibold text-gray-400'>Proyecto 2</p>
          <p class='text-sm text-gray-500'>Breve descripción del proyecto</p>
        </div>
      </section>
    </div>
  </Section>
</Base>

